<Window x:Class="techo.RequestListAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:techo"
        mc:Ignorable="d"
        Height="450" Width="800"
             WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel Orientation="Horizontal" Height="30" VerticalAlignment="Top" Background="LightBlue">
            <Button HorizontalAlignment="Left" Click="Button_Click_1" Content="Редактировать заявку"></Button>
            <Button HorizontalAlignment="Left" Click="Button_Click_2" Content="Обновить"></Button>
        </StackPanel>
        <Label HorizontalAlignment="Left">Ваши заявки:</Label>
        <ListBox x:FieldModifier="public" x:Name="RepairRequestsListBox" VerticalAlignment="Top" Height="300"/>

    </StackPanel>
</Window>
