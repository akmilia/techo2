<Window x:Class="techo.Registration"     
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="1" Grid.Row="0" Content="Регистрация" HorizontalAlignment="Left" FontSize="16" FontWeight="Bold" Margin="200 0 0 0"
               Padding="20"/> 
        
        <Label Grid.Column="0" Grid.Row="1" Content="ФИО полностью :) "/>
        <TextBox Grid.Column="1" Grid.Row="1" Name="FIOTextBox" Margin="0,0,0,10"/> 
        
        <Label Grid.Column="0" Grid.Row="2" Content="Номер телефона "/> 
        <TextBox Grid.Column="1" Grid.Row="2" Name="PhoneNumberTextBox" Margin="0,0,0,10"/>
       
        <Label Grid.Column="0" Grid.Row="3" Content="Логин "/>
        <TextBox Grid.Column="1" Grid.Row="3" Name="LoginTextBox" Margin="0,0,0,10"/>
        
        <Label Grid.Column="0" Grid.Row="4" Content="Пароль "/>
        <PasswordBox Grid.Column="1" Grid.Row="4" Name="PasswordTextBox" Margin="0,0,0,10"/>

        <Label Grid.Column="0" Grid.Row="5" Content="Роль"/> 
        <ComboBox Grid.Column="1" Grid.Row="5" Name="TypeComboBox" Margin="0,0,0,10">
            <ComboBoxItem Content="Менеджер"/>
            <ComboBoxItem Content="Мастер"/>
            <ComboBoxItem Content="Оператор"/>
            <ComboBoxItem Content="Заказчик"/>
        </ComboBox>
        <Button Grid.Column="1" Grid.Row="6" Content="Зарегистрироваться" Width="500" HorizontalAlignment="Left" Click="RegisterButton_Click"/>
        <Button Grid.Column="1" Grid.Row="7" Content="Уже есть аккаунт? " Width="500" HorizontalAlignment="Left" Click="AuthorizeButton_Click" Background="AliceBlue" Margin="0 10 0 0"/>

    </Grid>
</Window>
