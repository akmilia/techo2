<Application x:Class="techo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:techo"
             StartupUri="AutorizationWin.xaml">
    <Application.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#e6002e"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="#e6002e"/>
            <Setter Property="Background" Value="AliceBlue"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="20"/>
        </Style>

        <Style TargetType="Grid">
            <Setter Property="Background" Value="WhiteSmoke"/>
        </Style>
        <Style x:Key="EmployeeFrameStyle" TargetType="Border">
                <Setter Property="Width" Value="310"/>
                <Setter Property="Height" Value="360"/>
                <Setter Property="Margin" Value="22,20"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="Gray"/>
            </Style>
            <Style x:Key="ButtonPanelStyle" TargetType="Button">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontFamily" Value="Bookman Old Style"/>
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="Padding" Value="30,18,50,18" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Border.CornerRadius" Value="15"/>
            </Style>

            <Style x:Key="NameStyle" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Bookman Old Style"/>
                <Setter Property="FontSize" Value="16" />
                <Setter Property="HorizontalAlignment" Value="Center" />
            </Style>

            <Style x:Key="FocusVisual">
                <Setter Property="Control.Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Rectangle Margin="2" StrokeDashArray="1 2" Stroke="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" SnapsToDevicePixels="true" StrokeThickness="1"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style x:Key="TBREeg" TargetType="TextBox">
                <Setter Property="Margin" Value="195,0,10,0"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontFamily" Value="Bookman Old Style"/>
                <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="AliceBlue"/>
                <Setter Property="SelectionBrush" Value="#FFDEA663"/>
                <Setter Property="Height" Value="32"/>
            </Style>
            <Style x:Key="PasReg" TargetType="PasswordBox">
                <Setter Property="Margin" Value="195,0,10,0"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontFamily" Value="Bookman Old Style"/>
                <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="AliceBlue"/>
                <Setter Property="SelectionBrush" Value="#FFDEA663"/>
                <Setter Property="Height" Value="32"/>
            </Style>
           
