<Window x:Class="techo.MasterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:techo"
        mc:Ignorable="d"
        Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <StackPanel Height="30" VerticalAlignment="Top" Background="AliceBlue">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Right" >
                <Button x:Name="AddButton" Content="Добавить комментарий" Margin="5" Click="AddButton_Click" />
                <Button HorizontalAlignment="Left" Click="Button_Click" Content="Обновить"></Button>
            </StackPanel>
        </StackPanel>
        <Label HorizontalAlignment="Left">Заявки:</Label>
        <ListBox x:FieldModifier="public" x:Name="RepairRequestsListBox" VerticalAlignment="Top" Height="300"/>
       
    </StackPanel>
    
</Window>
